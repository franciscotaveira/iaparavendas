            "name": "Split",
            "type": "n8n-nodes-base.splitInBatches",
            "typeVersion": 3,
            "position": [
                900,
                300
            ]
        },
        {
            "parameters": {
                "operation": "executeQuery",
                "query": "UPDATE walkin_queue SET status = 'notified', notified_at = NOW(), response_deadline = NOW() + INTERVAL '10 minutes', updated_at = NOW() WHERE id = '{{ $json.id }}'::uuid;"
            },
            "id": "mark-notified",
            "name": "Mark Notified",
            "type": "n8n-nodes-base.postgres",
            "typeVersion": 2.3,
            "position": [
                1120,
                300
            ],
            "credentials": {
                "postgres": {
                    "id": "SUPABASE_CRED_ID",
                    "name": "Supabase PostgreSQL"

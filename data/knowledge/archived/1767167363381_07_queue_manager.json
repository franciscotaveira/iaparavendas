            "typeVersion": 2.3,
            "position": [
                460,
                400
            ],
            "credentials": {
                "postgres": {
                    "id": "SUPABASE_CRED_ID",
                    "name": "Supabase PostgreSQL"
                }
            }
        },
        {
            "parameters": {
                "operation": "executeQuery",
                "query": "SELECT DISTINCT ON (category) q.*, c.phone, c.name, s.name as service_name FROM view_queue_live q JOIN contacts c ON q.contact_id = c.id JOIN services s ON q.service_id = s.id WHERE q.position_in_category = 1 AND NOT EXISTS (SELECT 1 FROM walkin_queue wq WHERE wq.category = q.category AND wq.status = 'notified');"
            },
            "id": "get-next",
            "name": "Get Next in Each Category",
            "type": "n8n-nodes-base.postgres",
            "typeVersion": 2.3,
            "position": [
                680,
                300
            ],
            "credentials": {
                "postgres": {
                    "id": "SUPABASE_CRED_ID",
                    "name": "Supabase PostgreSQL"
                }
            }
        },
        {
            "parameters": {},

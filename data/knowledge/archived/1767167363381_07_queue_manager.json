            "position": [
                240,
                300
            ]
        },
        {
            "parameters": {
                "operation": "executeQuery",
                "query": "UPDATE walkin_queue SET status = 'expired', updated_at = NOW() WHERE status = 'queued' AND expires_at < NOW() RETURNING id, contact_id;"
            },
            "id": "expire-old",
            "name": "Expire Old Queue Entries",
            "type": "n8n-nodes-base.postgres",
            "typeVersion": 2.3,
            "position": [
                460,
                200

                "postgres": {
                    "id": "SUPABASE_CRED_ID",
                    "name": "Supabase PostgreSQL"
                }
            }
        },
        {
            "parameters": {
                "jsCode": "const slots=$input.all().map(i=>i.json);const inp=$('Parse Date').first().json;\nif(!slots.length)return{...inp,response_message:'Poxa, n√£o encontrei hor√°rios para esse dia. üòî\\n\\nQuer outro dia?',awaiting:'date'};\nlet msg='Achei esses hor√°rios:\\n\\n';['A','B','C'].forEach((l,i)=>{if(slots[i]){const d=new Date(slots[i].slot_start);msg+=l+') '+d.toLocaleDateString('pt-BR')+' '+d.toLocaleTimeString('pt-BR',{hour:'2-digit',minute:'2-digit'})+' com '+slots[i].staff_name+'\\n';}});\nmsg+='\\nQual prefere? A, B ou C üòä';return{...inp,slots,response_message:msg,awaiting:'slot_choice'};"
            },

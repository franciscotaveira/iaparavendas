            },
            "id": "create-apt",
            "name": "Create Appointment",
            "type": "n8n-nodes-base.postgres",
            "typeVersion": 2.3,
            "position": [
                1560,
                400
            ],
            "credentials": {
                "postgres": {
                    "id": "SUPABASE_CRED_ID",
                    "name": "Supabase PostgreSQL"
                }
            }
        },
        {
            "parameters": {
                "jsCode": "const s=$('Format Slots').first().json.slots[0];const d=new Date(s.slot_start);\nreturn{response_message:'Prontinho! ‚úÖ\\n\\nüìÖ '+d.toLocaleDateString('pt-BR')+'\\n‚è∞ '+d.toLocaleTimeString('pt-BR',{hour:'2-digit',minute:'2-digit'})+'\\nüë© Com '+s.staff_name+'\\n\\nVou te lembrar! üíú'};"
            },

        {
            "parameters": {
                "jsCode": "let d = $input.first().json.date || new Date(Date.now()+86400000).toISOString().split('T')[0];\nif(d==='hoje')d=new Date().toISOString().split('T')[0];\nif(d.includes('amanha'))d=new Date(Date.now()+86400000).toISOString().split('T')[0];\nreturn {...$input.first().json, target_date: d};"
            },
